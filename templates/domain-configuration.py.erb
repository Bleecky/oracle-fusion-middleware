#===============================================================================
# Configure Machines
#===============================================================================

<% @config['datasources'].each do | ds_config | -%>
oscustom.configureMachine()
<% end -%>

#===============================================================================
# Configure Servers
#===============================================================================

<% @config['datasources'].each do | ds_config | -%>
oscustom.configureServers()
<% end -%>

#===============================================================================
# Configure Clusters
#===============================================================================

<% @config['datasources'].each do | ds_config | -%>
oscustom.configureClusters()
<% end -%>

#===============================================================================
# Configure Datasources
#===============================================================================

<% @config['datasources'].each do | ds_config | -%>
oscustom.configureDataSource('<%= ds_config['name'] %>', '<%= ds_config['jdbc_driver'] %>', 'jdbc/<%= ds_config['name'] %>', '<%= ds_config['user'] %>', '<%= ds_config['pwd'] %>', 'jdbc:thin:oracle@<%= ds_config['name'] %>:1521//<%= ds_config['sid'] %>')
<% end -%>

